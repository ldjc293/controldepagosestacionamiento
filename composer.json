{
  "name": "estacionamiento/control-pagos",
  "description": "Sistema de gestiÃ³n de pagos mensuales para estacionamiento residencial Bloques 27-32",
  "type": "project",
  "version": "1.0.0",
  "require": {
    "php": ">=8.1",
    "phpmailer/phpmailer": "^6.8",
    "dompdf/dompdf": "^2.0",
    "phpoffice/phpspreadsheet": "^1.29",
    "chillerlan/php-qrcode": "^4.3",
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "classmap": [
      "app/controllers",
      "app/models",
      "app/helpers"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse"
  }
}
